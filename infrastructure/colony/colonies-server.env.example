# Colony OS Server Configuration
# Copy this file to .env and fill in the values

# Database Configuration
COLONIES_DB_NAME=colonies
COLONIES_DB_USER=colonies
COLONIES_DB_PASSWORD=your_secure_password_here

# Server Configuration
COLONIES_SERVER_HOST=0.0.0.0
COLONIES_SERVER_PORT=8080
COLONIES_SERVER_TLS=false
COLONIES_SERVER_LOG_LEVEL=info

# For production, set TLS to true and configure certificates
# COLONIES_SERVER_TLS=true
# COLONIES_SERVER_CERT_PATH=/path/to/cert.pem
# COLONIES_SERVER_KEY_PATH=/path/to/key.pem

